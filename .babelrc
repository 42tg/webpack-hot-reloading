{
    "presets": [
        [
            "@babel/preset-env",
            {
                "loose": true,
                "modules": false,
                "targets": {
                    "browsers": "last 2 chrome versions"
                }
            }
        ],
        "@babel/preset-react",
        "@emotion/babel-preset-css-prop"
    ],
    "plugins": [
        "react-hot-loader/babel",
        ["@babel/plugin-proposal-class-properties", { "loose": true }]
    ]
}
